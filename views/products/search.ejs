<%- include('../includes/head.ejs') %>
<style>
    @import url('https://fonts.googleapis.com/css2?family=Kanit:wght@100;200&family=Prompt:wght@100&display=swap');
    .newfont {
        font-family: 'Kanit', sans-serif;
    }
  </style>
    <div class="container mt-12">
        <div class="row">
            <div class="col-md-12">
                <br>
                <h2 class="newfont">Camera Product</h2>
                <p class="newfont">Type something in the input field to search the table for product name:</p>
                <hr>
            </div>
        </div>
        
            <div class="row">
                <div class="col-md-10">
                    <input class="form-control" id="myInput" type="text" placeholder="Search..">
                </div>
                <div class="col-md-2">
                    <a href="/insert" class="btn btn-info btn-block"><i class="fa fa-plus" aria-hidden="true"></i> New Product</a>
                </div>
            </div>
            <br>
            <table class="table table-bordered text-center">
                <thead>
                    <tr style="text-align:center;">
                        <th class="newfont" style="text-align:center;">#</th>
                        <th class="newfont" style="text-align:center;">Product Name :</th>
                        <th class="newfont" style="text-align:center;">category :</th>
                        <th class="newfont" style="text-align:center;">Price :</th>
                        <th class="newfont" style="text-align:center;">Amount :</th>
                        <th  class="newfont"style="text-align:center;"></th>
                    </tr>
                </thead>
                <tbody id="myTable">
                    <% if (prods.length > 0) { %>
    
                        <% prods.map((product, index) => { %>
                            <tr>
                                <td class="newfont">
                                    <%- (index+1) %>
                                </td>
                                <td class="newfont" style="text-align:left;" >
                                    <%- product.product_name%>
                                </td>
                                <td class="newfont" >
                                    <%- product.category_name%>
                                </td>
                                <td class="newfont">
                                    <%- product.price%>
                                </td>
                                <td class="newfont">
                                    <%- product.amount%>
                                </td>
                                <td class="newfont">
                                    <a href="<%- '/products/update/'+product._id%>" class="btn btn-warning"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit</a>
                                    <a href="<%- '/products/delete/'+product._id%>" onclick="return confirm('Are you sure you want to delete this item?');" class="btn btn-danger"> <i class="fa fa-trash-o" aria-hidden="true"></i> Delete</a>
                                </td>
                            </tr>
                            <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="4">
                                            <h1 class="newfont">No Products Found!</h1>
                                        </td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>
        
<%- include('../includes/end.ejs') %>