<%- include('../includes/head.ejs') %>
<style>
    @import url('https://fonts.googleapis.com/css2?family=Kanit:wght@100;200&family=Prompt:wght@100&display=swap');
    .newfont {
        font-family: 'Kanit', sans-serif;
    }
  </style>
   <div class="container">
    <div class="row">
        <div class="col-md-12">
            <br>
            <h2 class="newfont" style="text-align:center;"> Shopping Cart</h2>
            <hr>
        </div>    
      </div>
   </div>
  
    <div class="container">
        <% let total = 0; let cartTotal =0; %>
        <% if (prods.length > 0) { %> 
            <% prods.map((cart, index) => { %>
    <div class="row">
        <div class="col-md-2">
        </div>
        <div class="col-md-4">
            <br>
            <img src="<%- cart.img_path%>" width="200" height="200" alt=""/>
            
        </div>
        <div class="col-md-6">
            <h2 class="newfont"><a href="#"><%- cart.product_name%></a></h2>
            <h4 class="newfont" >1 x <%- cart.price%> ฿</h4></li>
            <% cartTotal =parseInt(cart.price)%>
            <% total = total+cartTotal %>
            <div class="product_control_buttons">
                <a  href="<%- '/cart/delete/'+cart._id%>" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
    <hr>
    <% }) %> 
    <% } else   { %>
    <h1>No Products Found!</h1>
    <% } %>

    <div class="container">
        <div class="row">
            <div class="col-md-12 ">
                <div class="box-info-product">
                  <p class="price2"></p>
                         <ul class="prosuct-qty">
                              <h2 class="newfont">Summary</h2>
                              <span class="actual"><h3 class="newfont" >Total: <%= total %> ฿</h3></span>
                              <button type="submit" name="Submit" class="btn btn-warning">
                                <span>Check out</span>
                             </button>
                          </ul>
                            
                 </div>
             </div>
            </div>
            </div>
        </div>

    </div>    
    <br><br>
 <%- include('../includes/end.ejs') %>
</body>	
</html>

